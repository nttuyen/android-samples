<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nttuyen.android.samples" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nttuyen.android.samples.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.nttuyen.android.samples.MainActivity" />
        </activity>
        <activity
            android:name="com.nttuyen.android.samples.slidingmenu.SlidingMenuSample"
            android:label="@string/title_activity_sliding_menu_sample" >
        </activity>
        <activity
            android:name="com.nttuyen.android.samples.slidingmenu.SlidingMenuActivity1"
            android:label="@string/title_activity_sliding_menu_activity1" >
        </activity>
    </application>

</manifest>
